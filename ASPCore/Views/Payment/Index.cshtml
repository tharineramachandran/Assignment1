
@{
    ViewData["Title"] = "Payment";
    Refund refund = ViewData.Model;
}

<style media="screen">
    body {
        padding: 100px
    }
</style>


<script src="https://code.jquery.com/jquery-2.2.4.min.js"></script>
<script>
    $.ajax({
        url: 'Payment/Get',
        type: 'GET',
        
        success: function (result) {
            console.log(result);
            for (var i = 0; i < result.length; i++) {
                tr = $('<tr/>');
                 tr.append("<td>" + result[i].id + "</td >");
                tr.append("<td>" + result[i].amount + "</td>");
                tr.append('<td><button class="delete" data-key="' + result[i].id + '">Delete</button></td>');
                $('table').append(tr);
            }

         }
    })
             
       
 


</script>


<head>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
</head>

<div class="container">
    <div class="row">
        <h2>Refund</h2>

        <table class="table">
            <thead>
                <tr>
                    <th>Customer ID</th>
                    <th>Refund</th>
                    <th> </th>
                </tr>
            </thead>
            <tbody>
            </tbody>
        </table>
    </div>


    <h2>Pause Payment </h2>
    <form action="/Payment/PausePayment" method="post">
        <br>
        <label for="behaviour">Subscription ID</label>
        <br>

        <input type="text" id="subscriptionId" name="subscriptionId">
        <br>
        <label for="behaviour">Choose pause payment</label>
        <br>

        <select id="behaviour" name="behaviour">
            <option value="mark_uncollectible">mark_uncollectible</option>
            <option value="keep_as_draft">keep_as_draft</option>
            <option value="void">void</option>
        </select>
        <br>
        <br>

        <input type="submit">
    </form>
</div>